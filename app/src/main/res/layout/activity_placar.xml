<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlacarActivity">

    <TextView
            android:text="Partida PingPongX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="33sp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/back"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:padding="12dp"/>
    <View
            android:layout_width="0dp"
            style="@style/divider"
            android:id="@+id/view2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="0"
            android:textSize="70sp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/home_edittext"
            android:id="@+id/tvPlacar1"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_chainStyle="spread" android:textAlignment="center"/>
    <TextView
            android:text="X"
            android:textSize="70sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/tvPlacar1" app:layout_constraintBottom_toBottomOf="@+id/tvPlacar1"
            app:layout_constraintStart_toEndOf="@+id/tvPlacar1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tvPlacar2"/>
    <TextView
            android:text="0"
            android:textSize="70sp"
            style="@style/home_edittext2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlacar2"
            app:layout_constraintTop_toTopOf="@+id/tvPlacar1" app:layout_constraintBottom_toBottomOf="@+id/tvPlacar1"
            app:layout_constraintStart_toEndOf="@+id/textView7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlayer1" app:layout_constraintStart_toStartOf="@+id/tvPlacar1"
            app:layout_constraintEnd_toEndOf="@+id/tvPlacar1" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPlacar1" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlayer2" app:layout_constraintStart_toStartOf="@+id/tvPlacar2"
            app:layout_constraintEnd_toEndOf="@+id/tvPlacar2"
            app:layout_constraintTop_toTopOf="@+id/tvPlayer1" app:layout_constraintBottom_toBottomOf="@+id/tvPlayer1"
            android:textAlignment="center"/>
    <Button
            android:text="PONTO"
            style="@style/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPoint1" app:layout_constraintStart_toStartOf="@+id/tvPlacar1"
            app:layout_constraintEnd_toEndOf="@+id/tvPlacar1" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayer1"/>
    <Button
            android:text="PONTO"
            style="@style/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPoint2" app:layout_constraintStart_toStartOf="@+id/tvPlacar2"
            app:layout_constraintEnd_toEndOf="@+id/tvPlacar2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayer2"/>
    <Button
            android:text="TERMINAR PARTIDA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btEndGame"
            app:layout_constraintStart_toStartOf="@+id/btPoint1"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/btPoint2"
            android:layout_marginEnd="8dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/btPoint1"/>
</androidx.constraintlayout.widget.ConstraintLayout>